<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Membership Packages -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_background_level_member_non_selected"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/tv_package_title_1"
                style="@style/textStyleSemIBold_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Paket Ace Silver" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icons_clock" />

                <TextView
                    style="@style/textStyleMedium_14"
                    android:id="@+id/tvPromoDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berlaku 3 Bulan"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="16dp" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <TableRow>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icons_dot"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tv_package_description_1_1"
                        style="@style/textStyleMedium_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tambahan manajemen kebun sebanyak 5 kebun" />
                </TableRow>

                <TableRow>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icons_dot"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tv_package_description_1_2"
                        style="@style/textStyleMedium_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tambahan manajemen kebun sebanyak 5 kebun" />
                </TableRow>

                <TableRow>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icons_dot"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tv_package_description_1_3"
                        style="@style/textStyleMedium_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tambahan manajemen kebun sebanyak 5 kebun" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey_100"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/custom_background_light_grey"
                android:padding="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_package_price_label_1"
                    style="@style/textStyleMedium_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Harga"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_package_price_1"
                    style="@style/textStyleSemIBold_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 300.000"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Membership Packages - Selected -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_background_level_member_selected"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/tv_package_title_2"
                style="@style/textStyleSemIBold_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Paket Ace Gold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icons_clock" />

                <TextView
                    style="@style/textStyleMedium_14"
                    android:id="@+id/tvPromoDate_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berlaku 6 Bulan"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="16dp" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <TableRow>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icons_dot"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tv_package_description_2_1"
                        style="@style/textStyleMedium_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tambahan manajemen kebun sebanyak 5 kebun" />
                </TableRow>

                <TableRow>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icons_dot"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tv_package_description_2_2"
                        style="@style/textStyleMedium_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tambahan manajemen kebun sebanyak 5 kebun" />
                </TableRow>

                <TableRow>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icons_dot"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tv_package_description_2_3"
                        style="@style/textStyleMedium_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tambahan manajemen kebun sebanyak 5 kebun" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey_100"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/custom_background_level_member_price_selected"
                android:padding="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_package_price_label_2"
                    style="@style/textStyleMedium_14_selected"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Harga"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_package_price_2"
                    style="@style/textStyleSemIBold_20_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 600.000"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>