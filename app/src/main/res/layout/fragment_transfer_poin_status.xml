<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".view.dashboard.promo.detail.status.PromoDetailStatusFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/order_confirmed"/>

        <TextView
            android:id="@+id/transfer_status_title"
            style="@style/textStyleSemIBold_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Transfer Berhasil"
            android:textSize="28sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/transfer_description"
            style="@style/textStyleMedium_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/dark_grey"
            android:textAlignment="center"
            android:text="Promo digunakan promo digunakan promo digunakan promo digunakan"/>



    </LinearLayout>

    <TextView
        android:id="@+id/transfer_status_button_selesai"
        style="@style/textStyleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:padding="12dp"
        android:text="Selesai"
        android:textColor="@color/white"
        android:textSize="20sp" />
</FrameLayout>