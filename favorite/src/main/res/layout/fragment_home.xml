<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.dicoding.favorite.view.home.HomeFragment">


    <!--    NON MEMBER SECTION  -->
    <LinearLayout
        android:id="@+id/linearLayoutNonMember"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNMGreeting"
            style="@style/textStyleSemIBold_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Non Member ðŸ‘‹"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgNonMember"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_home_non_member"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAMGreeting" />

        <TextView
            style="@style/textStyleSemIBold_16"
            android:id="@+id/tvNMPromoHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promo untuk anda"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNMPromo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal"
            tools:listitem="@layout/item_story"/>
    </LinearLayout>


<!--    MEMBER SECTION  -->

    <LinearLayout
        android:id="@+id/linearLayoutMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            style="@style/textStyleSemIBold_20"
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Davis ðŸ‘‹"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_picture"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                style="@style/textStyleSemIBold_32"
                android:id="@+id/tvMembershipType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ace Silver"
                android:textColor="@color/white" />

            <TextView
                style="@style/textStyleMedium_14"
                android:id="@+id/tvMembershipExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exp 28 Desember 2023"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_background_home">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        style="@style/textStyleMedium_14"
                        android:id="@+id/tvCouponLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sisa Kupon"
                        android:textSize="14sp"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:padding="4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icons_coupon"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            style="@style/textStyleSemIBold_16"
                            android:id="@+id/tvCouponCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16"
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        style="@style/textStyleMedium_14"
                        android:id="@+id/tvPointsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Poin"
                        android:textSize="14sp"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:padding="4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icons_point"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center"/>
                        <TextView
                            style="@style/textStyleSemIBold_16"
                            android:id="@+id/tvPointsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20.000"
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tvGreeting"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                style="@style/textStyleButton3"
                android:background="@drawable/custom_button"
                android:id="@+id/btnTransfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transfer"
                android:drawableLeft="@drawable/icons_transfer"
                android:backgroundTint="@color/orange_100"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                style="@style/textStyleButton3"
                android:background="@drawable/custom_button"
                android:id="@+id/btnReferral"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Referral"
                android:drawableLeft="@drawable/icons_referral"
                android:backgroundTint="@color/orange_100"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <TextView
            style="@style/textStyleSemIBold_20"
            android:id="@+id/tvPromoHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promo untuk anda"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPromo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal"
            tools:listitem="@layout/item_story"/>
    </LinearLayout>


<!--    Mitra and Admin Section-->

    <LinearLayout
        android:id="@+id/linearLayoutAdminMitra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvAMGreeting"
            style="@style/textStyleSemIBold_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Admin ðŸ‘‹"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgHotel"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_background_light_grey"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAMGreeting" />

        <TextView
            android:id="@+id/tvAMMembershipType"
            style="@style/textStyleMedium_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_item_promo_type"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="5dp"
            android:text="Hotel"
            android:textColor="@color/orange_100"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvHotelName"
            style="@style/textStyleSemIBold_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Ace Indonesia"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgHotel" />

        <TextView
            android:id="@+id/tvStatistik"
            style="@style/textStyleSemIBold_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="Statistik Mitra"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHotelName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <!-- Section 1: Promo Mitra and Promo Digunakan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_background_light_grey"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/textStyleMedium_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Promo Mitra" />

                    <TextView
                        style="@style/textStyleSemIBold_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_background_light_grey"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/textStyleMedium_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promo Digunakan" />

                    <TextView
                        style="@style/textStyleSemIBold_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="32" />
                </LinearLayout>
            </LinearLayout>

            <!-- Section 2: Poin Mitra -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_background_light_grey"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    style="@style/textStyleMedium_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poin Mitra" />

                <TextView
                    style="@style/textStyleSemIBold_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icons_point"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/black"
                    android:text="400.000" />
            </LinearLayout>

            <!-- Section 3: Poin Terima and Poin Transfer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_background_light_green"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/textStyleMedium_14_selected_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poin Terima"
                        android:textColor="@color/green" />

                    <TextView
                        style="@style/textStyleSemIBold_20_selected_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/icons_point"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/green"
                        android:text="200.000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_background_light_grey"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/textStyleMedium_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poin Terima" />

                    <TextView
                        style="@style/textStyleSemIBold_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/icons_point"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/black"
                        android:text="200.000" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/textStyleMedium_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Deskripsi">

        </TextView>

        <TextView
            style="@style/textStyleMedium_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/dark_grey">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/floatingMenuAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--on below line we are creating a add fab-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/idFABPromoReedem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:padding="4dp"
            android:src="@drawable/icons_promo_reedem"
            android:visibility="gone"
            app:backgroundTint="@color/white"
            app:tint="@color/orange_100" />

        <!--on below line we are creating a home fab
             and setting its visibility to gone-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/idFABCouponReedem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:padding="4dp"
            android:src="@drawable/icons_coupon_reedem"
            android:visibility="gone"
            app:backgroundTint="@color/white"
            app:tint="@color/orange_100" />

        <!--on below line we are creating a settings fab
            and setting its visibility to gone-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/idFABAddMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/orange_100"
            android:contentDescription="@string/app_name"
            android:padding="12dp"
            android:src="@drawable/icons_add"
            app:backgroundTint="@color/orange_100"
            app:tint="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>